ArchSimModel.dtd

<?xml version='1.0' encoding='us-ascii'?>

<!--
   DTD for an archsim model
-->

<!ELEMENT model (component+, connection*)>
<!ATTLIST model
			name CDATA #REQUIRED 
>
<!ELEMENT component (name, type)>
<!ELEMENT connection (connection_name, from+, to+)>
<!ELEMENT from (component_name, terminal_name) >
<!ELEMENT to (component_name, terminal_name) >
<!ELEMENT model_name (#PCDATA) >
<!ELEMENT name (#PCDATA)>
<!ELEMENT connection_name (#PCDATA)>
<!ELEMENT type (#PCDATA)>
<!ELEMENT component_name (#PCDATA)>
<!ELEMENT terminal_name (#PCDATA) >

testModelLoader.xml

<?xml version='1.0' encoding='utf-8'?>

<!-- test for ModelLoader -->

<!DOCTYPE model SYSTEM "ArchSimModel.dtd">

<model name= "test">

<component>
<name>in</name>
<type>A</type> 
</component>

<component>
<name>out</name>
<type>B</type> 
</component>

<component>
<name>out0</name>
<type>A</type> 
</component>

<component>
<name>in0</name>
<type>B</type> 
</component>

<component>
<name>in1</name>
<type>B</type> 
</component>

<component>
<name>out00</name>
<type>A</type> 
</component>

<component>
<name>out01</name>
<type>A</type> 
</component>

<component>
<name> inOut00</name>
<type>C</type> 
</component>

<component>
<name> inOut01</name>
<type>C</type> 
</component>

<component>
<name> in00</name>
<type>B</type> 
</component>

<connection>
<connection_name> out-to-in </connection_name>
<from>
<component_name> out</component_name>
<terminal_name> outTerminal</terminal_name>
</from>
<to>
<component_name> in</component_name>
<terminal_name> inTerminal</terminal_name>
</to>
</connection>

<connection>
<connection_name> out0-in0-in1</connection_name>
<from>
<component_name> out0</component_name>
<terminal_name> outTerminal</terminal_name>
</from>
<to>
<component_name> in0</component_name>
<terminal_name> inTerminal</terminal_name>
</to>
<to>
<component_name> in1</component_name>
<terminal_name> inTerminal</terminal_name>
</to>
</connection>

<connection>
<connection_name> out00and01-inOut00and01 </connection_name>
<from>
<component_name> out00</component_name>
<terminal_name> outTerminal</terminal_name>
</from>
<from>
<component_name> out01</component_name>
<terminal_name> outTerminal</terminal_name>
</from>
<to>
<component_name> inOut00</component_name>
<terminal_name> inTerminal</terminal_name>
</to>
<to>
<component_name> inOut01</component_name>
<terminal_name> inTerminal</terminal_name>
</to>
</connection>

<connection>
<connection_name> inOut00and01-in00</connection_name>
<from>
<component_name> inOut00</component_name>
<terminal_name> outTerminal</terminal_name>
</from>
<from>
<component_name> inOut01</component_name>
<terminal_name> outTerminal</terminal_name>
</from>
<to>
<component_name> in00</component_name>
<terminal_name> inTerminal</terminal_name>
</to>
</connection>



</model>