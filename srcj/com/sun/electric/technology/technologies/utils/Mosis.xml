<!DOCTYPE DRCRules SYSTEM "DRC.dtd">

<DRCRules>
    <Foundry name="MOSIS">
    <!-- Well rules -->
        <LayerRule ruleName="1.1 (Mosis)" layerName="P-Well, N-Well, Pseudo-P-Well, Pseudo-N-Well" type="MINWID" when="DE|SU" value="12"/>
        <LayerRule ruleName="1.1 (Mosis)" layerName="P-Well, N-Well, Pseudo-P-Well, Pseudo-N-Well" type="MINWID" when="SC" value="10"/>
        <LayersRule ruleName="1.2 (Mosis)" layerNames="{P-Well, P-Well}, {N-Well, N-Well}" type="UCONSPA" when="DE|SU" value="18"/>
        <LayersRule ruleName="1.2 (Mosis)" layerNames="{P-Well, P-Well}, {N-Well, N-Well}" type="UCONSPA" when="SC" value="9"/>
        <LayersRule ruleName="1.3 (Mosis)" layerNames="{P-Well, P-Well}, {N-Well, N-Well}" type="CONSPA" when="ALL" value="6"/>
        <LayersRule ruleName="1.4 (Mosis)" layerNames="{P-Well, N-Well}" type="SPACING" when="ALL" value="0"/>
        <!-- Active rules -->
        <LayerRule ruleName="2.1 (Mosis)" layerName="P-Active, N-Active" type="MINWID" when="ALL" value="3"/>
        <LayersRule ruleName="2.2 (Mosis)" layerNames="{P-Active, P-Active}, {N-Active, N-Active}, {P-Active-Well, P-Active-Well}, {P-Active, P-Active-Well}, {N-Active, P-Active-Well}"
            type="SPACING" when="ALL" value="3"/>

        <!-- Active contacts under DE|SU rules -->
        <NodeLayersRule ruleName="2.3 (Mosis)" layerNames="{N-Well, P-Active}" type="SURROUND" when="DE|SU" value="6" nodeName="Metal-1-P-Active-Con"/>
        <NodeLayersRule ruleName="2.3 (Mosis)" layerNames="{N-Well, P-Active}" type="ASURROUND" when="DE|SU" value="6" nodeName="P-Active"/>
        <NodeLayersRule ruleName="2.3 (Mosis)" layerNames="{P-Well, N-Active}" type="SURROUND" when="DE|SU" value="6" nodeName="Metal-1-N-Active-Con"/>
        <NodeLayersRule ruleName="2.3 (Mosis)" layerNames="{P-Well, N-Active}" type="ASURROUND" when="DE|SU" value="6" nodeName="N-Active"/>
        <!-- transistor well-active surround under DE|SU rules -->
        <NodeRule ruleName="2.3 (Mosis)" type="TRAWELL" when="DE|SU" value="6"/>

        <!-- Active contacts under SC rules -->
        <NodeLayersRule ruleName="2.3 (Mosis)" layerNames="{N-Well, P-Active}" type="SURROUND" when="SC" value="5" nodeName="Metal-1-P-Active-Con"/>
        <NodeLayersRule ruleName="2.3 (Mosis)" layerNames="{N-Well, P-Active}" type="ASURROUND" when="SC" value="5" nodeName="P-Active"/>
        <NodeLayersRule ruleName="2.3 (Mosis)" layerNames="{P-Well, N-Active}" type="SURROUND" when="SC" value="5" nodeName="Metal-1-N-Active-Con"/>
        <NodeLayersRule ruleName="2.3 (Mosis)" layerNames="{P-Well, N-Active}" type="ASURROUND" when="SC" value="5" nodeName="N-Active" />
        <!-- transistor well-active surround under SC rules -->
        <NodeRule ruleName="2.3 (Mosis)" type="TRAWELL" when="SC" value="5"/>

        <!-- Active layer -->
        <LayersRule ruleName="2.5 (Mosis)" layerNames="{P-Active, N-Active}" type="SPACING" when="ALL" value="4"/>

        <!-- polysilicon -->
        <LayerRule ruleName="3.1 (Mosis)" layerName="Polysilicon-1" type="MINWID" when="ALL" value="2" />
        <LayerRule ruleName="3.1 (Mosis)" layerName="Transistor-Poly" type="MINWID" when="ALL" value="2" />
        <LayersRule ruleName="3.2 (Mosis)" layerNames="{Polysilicon-1, Polysilicon-1}" type="SPACING" when="DE|SU" value="3"/>
        <LayersRule ruleName="3.2 (Mosis)" layerNames="{Polysilicon-1, Transistor-Poly}" type="SPACING" when="DE|SU" value="3"/>
        <LayersRule ruleName="3.2 (Mosis)" layerNames="{Polysilicon-1, Polysilicon-1}" type="SPACING" when="SC" value="2"/>
        <LayersRule ruleName="3.2 (Mosis)" layerNames="{Polysilicon-1, Transistor-Poly}" type="SPACING" when="SC" value="2"/>
        <LayersRule ruleName="3.2a (Mosis)" layerNames="{Transistor-Poly, Transistor-Poly}" type="SPACING" when="DE" value="4"/>
        <LayersRule ruleName="3.2a (Mosis)" layerNames="{Transistor-Poly, Transistor-Poly}" type="SPACING" when="SU" value="3"/>
        <LayersRule ruleName="3.2a (Mosis)" layerNames="{Transistor-Poly, Transistor-Poly}" type="SPACING" when="SC" value="2"/>

        <!-- Transistor poly -->
        <NodeRule ruleName="3.3 (Mosis)" type="TRAPOLY" when="DE" value="2.5"/>
        <NodeRule ruleName="3.3 (Mosis)" type="TRAPOLY" when="SU|SC" value="2"/>
        <NodeRule ruleName="3.4 (Mosis)" type="TRAACTIVE" when="DE" value="4"/>
        <NodeRule ruleName="3.4 (Mosis)" type="TRAACTIVE" when="SU|SC" value="3"/>

        <!-- Poly and active layers -->
         <LayersRule ruleName="3.5 (Mosis)" layerNames="{Polysilicon-1, P-Active}, {Transistor-Poly, P-Active}, {Polysilicon-1, N-Active},
         {Transistor-Poly, N-Active}, {Polysilicon-1,  P-Active-Well}, {Transistor-Poly, P-Active-Well}"
             type="SPACING" when="ALL" value="1"/>

        <!-- Select layers -->
        <LayerRule ruleName="4.4 (Mosis)" layerName="P-Select, N-Select, Pseudo-P-Select, Pseudo-N-Select" type="MINWID" when="DE" value="4" />
        <LayersRule ruleName="4.4 (Mosis)" layerNames="{P-Select, P-Select}, {N-Select, N-Select}" type="SPACING" when="DE" value="4"/>
        <LayerRule ruleName="4.4 (Mosis)" layerName="P-Select, N-Select, Pseudo-P-Select, Pseudo-N-Select" type="MINWID" when="SU|SC" value="2" />
        <LayersRule ruleName="4.4 (Mosis)" layerNames="{P-Select, P-Select}, {N-Select, N-Select}" type="SPACING" when="SU|SC" value="2"/>

        <LayersRule ruleName="4.4 (Mosis)" layerNames="{P-Select, N-Select}" type="SPACING" when="ALL" value="0"/>

        <!-- Poly cut -->
        <LayerRule ruleName="5.1 (Mosis)" layerName="Poly-Cut" type="MINWID" when="ALL" value="2" />

        <!-- Poly contact -->
        <NodeRule ruleName="5.2 (Mosis)" type="NODSIZ" when="NAC" value="5" nodeName="Metal-1-Polysilicon-1-Con"/>
        <NodeLayersRule ruleName="5.2 (Mosis)" layerNames="{Polysilicon-1,  Metal-1}" type="SURROUND" when="NAC" value="0.5" nodeName="Metal-1-Polysilicon-1-Con"/>
        <NodeRule ruleName="5.2 (Mosis)" type="CUTSUR" when="NAC" value="1.5" nodeName="Metal-1-Polysilicon-1-Con"/>
        <NodeRule ruleName="5.2b (Mosis)" type="NODSIZ" when="AC" value="4" nodeName="Metal-1-Polysilicon-1-Con"/>
        <NodeLayersRule ruleName="5.2b (Mosis)" layerNames="{Polysilicon-1,  Metal-1}" type="SURROUND" when="AC" value="0" nodeName="Metal-1-Polysilicon-1-Con"/>
        <NodeRule ruleName="5.2b (Mosis)" type="CUTSUR" when="AC" value="1" nodeName="Metal-1-Polysilicon-1-Con"/>

        <!-- Multi poly contacts -->
        <NodeRule ruleName="5.3 (Mosis)" type="CUTSPA" when="DE" value="4" nodeName="Metal-1-Polysilicon-1-Con"/>
        <NodeRule ruleName="5.3 (Mosis)" type="CUTSPA2D" when="DE" value="4" nodeName="Metal-1-Polysilicon-1-Con"/>
        <LayersRule ruleName="5.3 (Mosis)" layerNames="{Poly-Cut, Poly-Cut}" type="SPACING" when="DE" value="4"/>
        <LayersRule ruleName="5.3,6.3 (Mosis)" layerNames="{Active-Cut, Poly-Cut}" type="SPACING" when="DE|NAC" value="4"/>

		<NodeRule ruleName="5.3 (Mosis)" type="CUTSPA" when="SC" value="2" nodeName="Metal-1-Polysilicon-1-Con"/>
        <NodeRule ruleName="5.3 (Mosis)" type="CUTSPA2D" when="SC" value="2" nodeName="Metal-1-Polysilicon-1-Con"/>
        <LayersRule ruleName="5.3 (Mosis)" layerNames="{Poly-Cut, Poly-Cut}" type="SPACING" when="SC" value="2"/>
        <LayersRule ruleName="5.3,6.3 (Mosis)" layerNames="{Active-Cut, Poly-Cut}" type="SPACING" when="SC|NAC" value="2"/>

		<NodeRule ruleName="5.3 (Mosis)" type="CUTSPA" when="SU" value="3" nodeName="Metal-1-Polysilicon-1-Con"/>
        <NodeRule ruleName="5.3 (Mosis)" type="CUTSPA2D" when="SU" value="3" nodeName="Metal-1-Polysilicon-1-Con"/>
        <LayersRule ruleName="5.3 (Mosis)" layerNames="{Poly-Cut, Poly-Cut}" type="SPACING" when="SU" value="3"/>
        <LayersRule ruleName="5.3,6.3 (Mosis)" layerNames="{Active-Cut, Poly-Cut}" type="SPACING" when="SU|NAC" value="3"/>

        <LayersRule ruleName="5.4 (Mosis)" layerNames="{Poly-Cut, Transistor-Poly}" type="SPACING" when="ALL" value="2"/>

        <LayersRule ruleName="5.5b (Mosis)" layerNames="{Poly-Cut, Polysilicon-1}" type="UCONSPA" when="DE|SU|AC" value="5"/>
        <LayersRule ruleName="5.5b (Mosis)" layerNames="{Poly-Cut, Transistor-Poly}" type="UCONSPA" when="DE|SU|AC" value="5"/>
        <LayersRule ruleName="5.5b (Mosis)" layerNames="{Poly-Cut, Polysilicon-1}" type="UCONSPA" when="SC|AC" value="4"/>
        <LayersRule ruleName="5.5b (Mosis)" layerNames="{Poly-Cut, Transistor-Poly}" type="UCONSPA" when="SC|AC" value="4"/>

        <LayersRule ruleName="5.6b (Mosis)" layerNames="{Poly-Cut, P-Active}" type="SPACING" when="AC" value="2"/>
        <LayersRule ruleName="5.6b (Mosis)" layerNames="{Poly-Cut, N-Active}" type="SPACING" when="AC" value="2"/>

        <LayersRule ruleName="5.7b (Mosis)" layerNames="{Poly-Cut, P-Active}" type="SPACINGM" when="AC" value="3"/>
        <LayersRule ruleName="5.7b (Mosis)" layerNames="{Poly-Cut, N-Active}" type="SPACINGM" when="AC" value="3"/>

        <!-- Active cut -->
        <LayerRule ruleName="6.1 (Mosis)" layerName="Active-Cut" type="MINWID" when="ALL" value="2" />

        <!-- Active contacts -->
        <NodeRule ruleName="6.2 (Mosis)" type="NODSIZ" when="NAC" value="5" nodeName="Metal-1-P-Active-Con, Metal-1-N-Active-Con"/>
        <NodeLayersRule ruleName="6.2 (Mosis)" layerNames="{P-Active, Metal-1}" type="SURROUND" when="NAC" value="0.5" nodeName="Metal-1-P-Active-Con"/>
        <NodeLayersRule ruleName="6.2 (Mosis)" layerNames="{N-Active, Metal-1}" type="SURROUND" when="NAC" value="0.5" nodeName="Metal-1-N-Active-Con"/>
        <NodeLayersRule ruleName="6.2 (Mosis)" layerNames="{P-Select, P-Active}" type="SURROUND" when="NAC" value="2" nodeName="Metal-1-P-Active-Con"/>
        <NodeLayersRule ruleName="6.2 (Mosis)" layerNames="{N-Select, N-Active}" type="SURROUND" when="NAC" value="2" nodeName="Metal-1-N-Active-Con"/>
        <NodeLayersRule ruleName="6.2 (Mosis)" layerNames="{N-Well, P-Active}" type="SURROUND" when="DE|SU|NAC" value="6" nodeName="Metal-1-P-Active-Con"/>
        <NodeLayersRule ruleName="6.2 (Mosis)" layerNames="{P-Well, N-Active}" type="SURROUND" when="DE|SU|NAC" value="6" nodeName="Metal-1-N-Active-Con"/>
        <NodeLayersRule ruleName="6.2 (Mosis)" layerNames="{N-Well, P-Active}" type="SURROUND" when="SC|NAC" value="5" nodeName="Metal-1-P-Active-Con"/>
        <NodeLayersRule ruleName="6.2 (Mosis)" layerNames="{P-Well, N-Active}" type="SURROUND" when="SC|NAC" value="5" nodeName="Metal-1-N-Active-Con"/>
        <NodeRule ruleName="6.2 (Mosis)" type="CUTSUR" when="NAC" value="1.5" nodeName="Metal-1-P-Active-Con, Metal-1-N-Active-Con"/>
        <!-- Active contacts with alternative arcs -->
        <NodeRule ruleName="6.2b (Mosis)" type="NODSIZ" when="AC" value="4" nodeName="Metal-1-P-Active-Con, Metal-1-N-Active-Con"/>
        <NodeLayersRule ruleName="6.2b (Mosis)" layerNames="{P-Active, Metal-1}" type="SURROUND" when="AC" value="0" nodeName="Metal-1-P-Active-Con"/>
        <NodeLayersRule ruleName="6.2b (Mosis)" layerNames="{N-Active, Metal-1}" type="SURROUND" when="AC" value="0" nodeName="Metal-1-N-Active-Con"/>
        <NodeLayersRule ruleName="6.2b (Mosis)" layerNames="{P-Select, P-Active}" type="SURROUND" when="AC" value="2" nodeName="Metal-1-P-Active-Con"/>
        <NodeLayersRule ruleName="6.2b (Mosis)" layerNames="{N-Select, N-Active}" type="SURROUND" when="AC" value="2" nodeName="Metal-1-N-Active-Con"/>
        <NodeLayersRule ruleName="6.2b (Mosis)" layerNames="{N-Well, P-Active}" type="SURROUND" when="DE|SU|AC" value="6" nodeName="Metal-1-P-Active-Con"/>
        <NodeLayersRule ruleName="6.2b (Mosis)" layerNames="{P-Well, N-Active}" type="SURROUND" when="DE|SU|AC" value="6" nodeName="Metal-1-N-Active-Con"/>
        <NodeLayersRule ruleName="6.2b (Mosis)" layerNames="{N-Well, P-Active}" type="SURROUND" when="SC|AC" value="5" nodeName="Metal-1-P-Active-Con"/>
        <NodeLayersRule ruleName="6.2b (Mosis)" layerNames="{P-Well, N-Active}" type="SURROUND" when="SC|AC" value="5" nodeName="Metal-1-N-Active-Con"/>
        <NodeRule ruleName="6.2b (Mosis)" type="CUTSUR" when="AC" value="1" nodeName="Metal-1-P-Active-Con, Metal-1-N-Active-Con"/>

        <!-- Well contacts -->
        <NodeRule ruleName="6.2 (Mosis)" type="NODSIZ" when="NAC" value="5" nodeName="Metal-1-P-Well-Con, Metal-1-N-Well-Con"/>
        <NodeLayersRule ruleName="6.2 (Mosis)" layerNames="{P-Active-Well, Metal-1}" type="SURROUND" when="NAC" value="0.5" nodeName="Metal-1-P-Well-Con"/>
        <NodeLayersRule ruleName="6.2 (Mosis)" layerNames="{N-Active, Metal-1}" type="SURROUND" when="NAC" value="0.5" nodeName="Metal-1-N-Well-Con"/>
        <NodeLayersRule ruleName="6.2 (Mosis)" layerNames="{P-Select, P-Active-Well}" type="SURROUND" when="NAC" value="2" nodeName="Metal-1-P-Well-Con"/>
        <NodeLayersRule ruleName="6.2 (Mosis)" layerNames="{N-Select, N-Active}" type="SURROUND" when="NAC" value="2" nodeName="Metal-1-N-Well-Con"/>
        <NodeLayersRule ruleName="6.2 (Mosis)" layerNames="{P-Well, P-Active-Well}" type="SURROUND" when="NAC" value="3" nodeName="Metal-1-P-Well-Con"/>
        <NodeLayersRule ruleName="6.2 (Mosis)" layerNames="{N-Well, N-Active}" type="SURROUND" when="NAC" value="3" nodeName="Metal-1-N-Well-Con"/>
        <NodeRule ruleName="6.2 (Mosis)" type="CUTSUR" when="NAC" value="1.5" nodeName="Metal-1-P-Well-Con, Metal-1-N-Well-Con"/>
        <!-- Well contacts with alternative arcs -->
        <NodeRule ruleName="6.2b (Mosis)" type="NODSIZ" when="AC" value="4" nodeName="Metal-1-P-Well-Con, Metal-1-N-Well-Con"/>
        <NodeLayersRule ruleName="6.2b (Mosis)" layerNames="{P-Active-Well, Metal-1}" type="SURROUND" when="AC" value="0" nodeName="Metal-1-P-Well-Con"/>
        <NodeLayersRule ruleName="6.2b (Mosis)" layerNames="{N-Active, Metal-1}" type="SURROUND" when="AC" value="0" nodeName="Metal-1-N-Well-Con"/>
        <NodeLayersRule ruleName="6.2b (Mosis)" layerNames="{P-Select, P-Active-Well}" type="SURROUND" when="AC" value="2" nodeName="Metal-1-P-Well-Con"/>
        <NodeLayersRule ruleName="6.2b (Mosis)" layerNames="{N-Select, N-Active}" type="SURROUND" when="AC" value="2" nodeName="Metal-1-N-Well-Con"/>
        <NodeLayersRule ruleName="6.2b (Mosis)" layerNames="{P-Well, P-Active-Well}" type="SURROUND" when="AC" value="3" nodeName="Metal-1-P-Well-Con"/>
        <NodeLayersRule ruleName="6.2b (Mosis)" layerNames="{N-Well, N-Active}" type="SURROUND" when="AC" value="3" nodeName="Metal-1-N-Well-Con"/>
        <NodeRule ruleName="6.2b (Mosis)" type="CUTSUR" when="AC" value="1" nodeName="Metal-1-P-Well-Con, Metal-1-N-Well-Con"/>

        <!-- Active contacts and multi cuts -->
        <NodeRule ruleName="6.3 (Mosis)" type="CUTSPA" when="DE" value="4" nodeName="Metal-1-P-Active-Con, Metal-1-N-Active-Con"/>
        <NodeRule ruleName="6.3 (Mosis)" type="CUTSPA2D" when="DE" value="4" nodeName="Metal-1-P-Active-Con, Metal-1-N-Active-Con"/>
        <LayersRule ruleName="6.3 (Mosis)" layerNames="{Active-Cut, Active-Cut}" type="SPACING" when="DE" value="4"/>
        <NodeRule ruleName="6.3 (Mosis)" type="CUTSPA" when="SC" value="2" nodeName="Metal-1-P-Active-Con, Metal-1-N-Active-Con"/>
        <NodeRule ruleName="6.3 (Mosis)" type="CUTSPA2D" when="SC" value="2" nodeName="Metal-1-P-Active-Con, Metal-1-N-Active-Con"/>
        <LayersRule ruleName="6.3 (Mosis)" layerNames="{Active-Cut, Active-Cut}" type="SPACING" when="SC" value="2"/>
        <NodeRule ruleName="6.3 (Mosis)" type="CUTSPA" when="SU" value="3" nodeName="Metal-1-P-Active-Con, Metal-1-N-Active-Con"/>
        <NodeRule ruleName="6.3 (Mosis)" type="CUTSPA2D" when="SU" value="3" nodeName="Metal-1-P-Active-Con, Metal-1-N-Active-Con"/>
        <LayersRule ruleName="6.3 (Mosis)" layerNames="{Active-Cut, Active-Cut}" type="SPACING" when="SU" value="3"/>

        <LayersRule ruleName="6.4 (Mosis)" layerNames="{Active-Cut, Transistor-Poly}" type="SPACING" when="ALL" value="2"/>

        <LayersRule ruleName="6.5b (Mosis)" layerNames="{Active-Cut, P-Active}, {Active-Cut, N-Active}" type="UCONSPA" when="AC" value="5"/>

        <LayersRule ruleName="6.6b (Mosis)" layerNames="{Active-Cut, Polysilicon-1}" type="SPACING" when="AC" value="2"/>

        <LayersRule ruleName="6.8b (Mosis)" layerNames="{Active-Cut, Poly-Cut}" type="SPACING" when="AC" value="4"/>

        <!-- Metal rules -->
        <LayerRule ruleName="7.1 (Mosis)" layerName="Metal-1" type="MINWID" when="ALL" value="3" />

        <LayersRule ruleName="7.2 (Mosis)" layerNames="{Metal-1, Metal-1}" type="SPACING" when="DE|SU" value="3"/>
        <LayersRule ruleName="7.2 (Mosis)" layerNames="{Metal-1, Metal-1}" type="SPACING" when="SC" value="2"/>
        <!-- Wide metals -->
        <LayersRule ruleName="7.4 (Mosis)" layerNames="{Metal-1, Metal-1}" type="SPACINGW" when="DE|SU" value="6" maxW="100" minLen="0"/>
        <LayersRule ruleName="7.4 (Mosis)" layerNames="{Metal-1, Metal-1}" type="SPACINGW" when="SC" value="4" maxW="100" minLen="0"/>

        <!-- Metal contacts -->
        <NodeRule ruleName="8.1 (Mosis)" type="CUTSIZE" when="DE" value="3" nodeName="Metal-1-Metal-2-Con"/>
        <NodeRule ruleName="8.1 (Mosis)" type="NODSIZ" when="DE" value="5" nodeName="Metal-1-Metal-2-Con"/>
        <NodeRule ruleName="8.1 (Mosis)" type="CUTSIZE" when="SU|SC" value="2" nodeName="Metal-1-Metal-2-Con"/>
        <NodeRule ruleName="8.1 (Mosis)" type="NODSIZ" when="SU|SC" value="4" nodeName="Metal-1-Metal-2-Con"/>

        <LayersRule ruleName="8.2 (Mosis)" layerNames="{Via1, Via1}" type="SPACING" when="ALL" value="3"/>

        <LayerRule ruleName="8.3 (Mosis)" layerName="Metal-1" type="VIASUR" when="ALL" value="1" nodeName="Metal-1-Metal-2-Con"/>
    </Foundry>
</DRCRules>